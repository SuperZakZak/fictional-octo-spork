# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# CRM Integration (AmoCRM, HubSpot, etc.)
CRM_API_KEY=your_crm_api_key_here
CRM_WEBHOOK_URL=https://your-crm-webhook-url.com

# Email Service (SendGrid, Resend, etc.)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=info@blooma.pt
EMAIL_TO=info@blooma.pt

# WhatsApp Business API (optional)
WHATSAPP_PHONE_NUMBER=+351XXXXXXXXX
WHATSAPP_API_KEY=your_whatsapp_api_key_here

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_pixel_id_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://blooma.pt
NEXT_PUBLIC_SITE_NAME=Blooma
